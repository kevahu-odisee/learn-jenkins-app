pipeline {
    agent any

    stages {
        stage('Docker initialize') {
            steps {
                sh 'docker run --rm -t -d --name learn-jenkins-app node:18-alpine'
                sh 'docker cp ./. learn-jenkins-app:/learn-jenkins-app'
                sh 'docker exec -w /learn-jenkins-app -it learn-jenkins-app sh'
            }
        }
        stage('Build') {
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    run build
                '''
            }
        }
    }
    post {
        always {
            sh 'exit'
            sh 'docker stop learn-jenkins-app'
        }
    }
}