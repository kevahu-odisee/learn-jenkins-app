pipeline {
    agent any

    stages {
        stage('Docker initialize') {
            steps {
                sh 'docker run --rm -t -d --name learn-jenkins-app node:18-alpine'
                sh 'docker cp ./. learn-jenkins-app:/learn-jenkins-app'
            }
        }
        stage('Build') {
            steps {
                sh '''
                    docker exec learn-jenkins-app -w learn-jenkins-app ls -la
                    docker exec learn-jenkins-app -w learn-jenkins-app node --version
                    docker exec learn-jenkins-app -w learn-jenkins-app npm --version
                    docker exec learn-jenkins-app -w learn-jenkins-app npm ci
                    docker exec learn-jenkins-app -w learn-jenkins-app npm run build
                '''
            }
        }
    }
    post {
        always {
            sh 'docker stop learn-jenkins-app'
        }
    }
}